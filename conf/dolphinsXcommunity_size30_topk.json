{
    "static_info" : {
        "random_seed": 157,
        "np_seed": 213,
        "network_path": "dolphins_nw.dat",
        "num_nodes": 62,
        "community_bound": 30,
        "num_top": 10,
        "embedding_size": 10

    },
    "run_modules":[
        {
            "func": "init",
            "params": {
                "func": "simple_init",
                "is_directed": false,
                "q2": 1.0
            }
        },
        {
            "func": "loop",
            "params":{
                "func": "simple_loop",
                "times": 20,
                "loop_modules":[
                    {
                        "func": "split_graph",
                        "params":{
